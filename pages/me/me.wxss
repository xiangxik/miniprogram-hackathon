.logo-container {
  width: 690rpx;
  margin: 30rpx auto;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.logo-img {
  width: 100rpx;
  height: 100rpx;
}

.logo-txt {
  color: #596c8e;
  font-size: 28rpx;
}

.num {
  color: #fc6517;
  font-size: 42rpx;
  font-style: italic;
}

.text {
  height: 30rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 30rpx;
  margin-top: 9rpx;
}

.grid-item {
  height: 200rpx;
}

